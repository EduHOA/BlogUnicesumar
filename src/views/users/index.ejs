<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Unicesumar - Lista de Usuarios</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Usuarios</h1>
        <a href="/users" class="btn btn-primary mt-3">Sair</a>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Função</th>
                    <th>Data de Cadastro</th>
                    <th>Ações</th>
                    <th>     </th>
                </tr>
            </thead>

                    <div>
                        <% 
                                function formatDate(date) {
                                    const d = new Date(date);
                                    const day = String(d.getDate()).padStart(2, '0');
                                    const month = String(d.getMonth() + 1).padStart(2, '0');
                                    const year = d.getFullYear();
                                    return `${day}/${month}/${year}`;
                                }
                                %>
                    </div>


            <tbody>
                <% if (users.length > 0) { %>
                    <% users.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.id %></td>
                            <td><%= usuario.name %></td>
                            <td><%= usuario.email %></td>
                            <td><%= usuario.position %></td>
                            <td><%= formatDate(usuario.created_at) %></td>
                            <td>
                                <form action="/users/edit/<%= usuario.id %>" method="GET">
                                    <button type="submit" class="btn btn-primary">Editar</button>
                                </form>
                            </td>

                            <td> 
                                <form action="/users/delete/<%= usuario.id %>" method="post">
                                    <button type="submit" class="btn btn-primary">Excluir</button>
                                </form>
                            </td>

                            
                        </tr>
                    <% }) %>

                <%} else {%>
                <tr>
                    <td colspan="4">Nenhum Usuario cadastrado</td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/users/form" class="btn btn-primary mt-3">Adicionar</a>
        <a href="/users/posts" class="btn btn-primary mt-3">Ver Postagens</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>